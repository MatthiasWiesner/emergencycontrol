{% extends 'layout.jinja' %}

{% block title %}Calendar{% endblock %}
{% block content %}
{% if current_user.is_anonymous() %}
<p>
You are not logged in.
</p>
{% else %}
<div class='row'>
<div class='span3'>
<div class='well sidebar-nav'>
    <ul class='nav nav-list'>
        <li class='nav-header'>EMS Rotation</li>
        {% for person in persons %}
            {% if loop.first %}
                <li class='active'><strong>{{person.name}}</strong></li>
            {% else %}
                <li>{{person.name}}</li>
            {% endif %}
        {% endfor %}
    </ul>
</div>
</div>
<div class='row'>
<div claas='span9'>
{% for week in weeks %}
   <div class='span3' id="{{week.id}}" ondrop="drop(event)"
   ondragover="allowDrop(event)"><h4>Week {{week.week_nr}}</h4>
       <p id="{{week.person_id}}" draggable="true"
       ondragstart="drag(event)"> {{week.person.name}} </p>
   </div>
{% endfor %}
</div>
</div>
</div>
{% endif %}
{% endblock %}
